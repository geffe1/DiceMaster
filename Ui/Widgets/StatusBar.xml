<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

  <Script file="StatusBar.lua"/>

  <!-- Status bar widget for health frames, charges frames, etc. -->
  <Frame name="DiceMasterStatusBar" enableMouse="true" intrinsic="true">
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="barback" setAllPoints="true" >
          
        </Texture>
		<Texture parentKey="bar-bgleft" atlas="ui-frame-bar-bgleft">
			<Anchors>
				<Anchor point="LEFT"/>
          </Anchors>
		</Texture>
		<Texture parentKey="bar-bgcenter" atlas="ui-frame-bar-bgcenter">
			<Anchors>
				<Anchor point="CENTER"/>
          </Anchors>
		</Texture>
		<Texture parentKey="bar-bgright" atlas="ui-frame-bar-bgright">
			<Anchors>
				<Anchor point="RIGHT"/>
          </Anchors>
		</Texture>
      </Layer>
      <Layer level="ARTWORK">
        <Texture parentKey="bar" >
          <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOM"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad intrinsicOrder="precall">
        DiceMaster4.StatusBar_Init( self )
      </OnLoad>
    </Scripts> 
  </Frame>

</Ui>
